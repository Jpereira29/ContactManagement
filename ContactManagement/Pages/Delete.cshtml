@page
@model ContactManagement.Pages.DeleteModel

@{
    ViewData["Title"] = "Delete Contact";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this contact?</h3>
<div>
    <h4><b>Contact</b> @Model.Contact.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contact.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contact.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contact.ContactNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contact.ContactNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contact.EmailAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contact.EmailAddress)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Contact.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
